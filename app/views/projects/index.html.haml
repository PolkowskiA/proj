.container
	%header
		%h1 Projects
	.content
		.project
			- if @projects.present?
				- @projects.each do |project|
					.project_container
						.project_view
							= link_to project.name, project
						.image
							= image_tag project.image.url("thumb")
						.starRating{ "data-score" => project.comments.average(:rating)}
						- if project.user == current_user
							.list
								%i.icon-list-bullet
								%ul
									%li
										= link_to edit_project_path(project) do
											Edit
									%li
										= link_to project, method: :delete, data: { confirm: "Project:     '#{project.name}'     will be removed. Are you sure?" } do
											Delete
						%div{style: "clear: both;"}
						.project_data
							Created by #{project.user.name} at: #{ project.created_at.strftime('%Y-%m-%d')}
			- else
				Not Project Found
		.creator
			= link_to	new_project_path do
				%i.icon-plus-squared
		%div{style: "clear: both;"}
	= paginate @projects	
:javascript
	$('.starRating').raty({
		readOnly: true,
		path: '/assets/',		
		score: function(){
			return $(this).atrr("data-score");
		}
	});