<p>
  <strong>Name:</strong>
  <%= @project.name %>
  <%= link_to 'Edit', edit_project_path %>
  <%= link_to 'Back', projects_path %>
</p>

<table>
  <tr>
  	<th>id</th>
    <th>status</th>
  </tr>
  <% if @project.comments.present? %>
    <% @project.comments.each do |comment| %>
      <tr>        
      	<td><%= comment.id %></td>
        <td><%= link_to comment.status, project_comment_path(@project, comment) %></td>
        <td><%= link_to 'Usun', project_comment_path(@project, comment), method: :delete, data: {confirm: 'Are y sure ?'} %></td>
      </tr>
    <% end %>
  <% else %>
    <em> No comments </em>
  <% end %>
</table>


<%= link_to 'New comment', new_project_comment_path(@project) %>
