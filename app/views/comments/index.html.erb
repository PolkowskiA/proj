<h1> Comments </h1>

<table>
	<tr>
		<th>Status</th>
	 	<th>Created At</th>
	    <th></th>
	    <th>Updated At</th>
	    <th></th>
    	<th>Comment name</th>
	</tr>

	<% if @comments.present? %>
		<% @comments.each do |comment| %>
	      <tr>	        
	        <td><%= comment.created_at.strftime('%Y-%m-%d') %></td>
	        <td><%= comment.updated_at.strftime('%T') %></td>
	        <td><%= link_to 'Show', project_comment_path(@project, comment)%></td>
	        <td><%= link_to 'Edit', edit_project_comment_path(@project, comment) %></td> 
	        <td><%= link_to 'Destroy', project_comment_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  <% else %>
	    <em> No Comments Found </em>
	  <% end %>
</table>

<%= link_to 'Add comment', new_project_comment_path %>
