<header>

	<h1>New Comment</h1>
	
</header>

<main>


	<%= form_for [@project, @comment], html: { multipart: true } do |f| %>

		<%= f.number_field :rating, min: 1, max: 5 %>

	  <div class="description">

	  	<%= f.text_area :content, size: "70x5", placeholder: "Content" %>

		</div>
		
			<%= f.submit %>

	<% end %>

	<div class="Back">

		<%= link_to 'Cancel', project_path(@project) %>

	</div>

	
</main>